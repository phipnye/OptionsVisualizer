{
    "name": "C++ + Python Dev Container",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "BASE_IMAGE": "mcr.microsoft.com/devcontainers/cpp:ubuntu-24.04",
            "LIBTORCH_VERSION": "2.3.1",
            "LIBTORCH_FLAVOR": "cpu"
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/git:1": {},
        "ghcr.io/devcontainers/features/python:1": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.autopep8",
                "ms-python.flake8",
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-extension-pack",
                "ms-vscode.cpptools-themes",
                "ms-vscode.cmake-tools",
                "ms-toolsai.jupyter",
                "ms-toolsai.jupyter-keymap",
                "ms-toolsai.jupyter-renderers",
                "ms-toolsai.vscode-jupyter-cell-tags",
                "ms-toolsai.vscode-jupyter-slideshow"
            ],
            "settings": {
                "chat.commandCenter.enabled": false,
                "chat.agent.enabled": false,
                "chat.disableAIFeatures": true,
                "cmake.configureArgs": [
                    "-DCMAKE_TOOLCHAIN_FILE=/usr/local/vcpkg/scripts/buildsystems/vcpkg.cmake",
                    "-DCMAKE_CXX_COMPILER=/usr/bin/g++"
                ],
                "cmake.configureEnvironment": {
                    "CXX": "/usr/bin/g++"
                },
                "cmake.configureOnEdit": false,
                "editor.aiStats.enabled": false,
                "python.defaultInterpreterPath": ".venv/bin/python3",
                "workbench.settings.showAISearchToggle": false
            }
        }
    },
    "postCreateCommand": "python3 -m venv .venv && .venv/bin/pip install -r app/requirements.txt",
    "remoteUser": "vscode"
}